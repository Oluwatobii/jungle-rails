<section class="orders-show">

  <header class="page-header">
  <% puts "Order: #{@order.inspect}"%>
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order <%= @order.email %>.</h4>
    <h5>Here is your order summary</h5>
    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>
          <% puts "Item inspect: #{item.inspect}"%>
          <tr>
            <td>
              <%= image_tag Product.find_by(id: item.product_id).image.tiny %>
            </td>
            <td>
              <h4><%= Product.find_by(id: item.product_id).name %></h4>
              <br>
              <p><%= Product.find_by(id: item.product_id).description %></p>
            </td>
            <td>
              <%= humanized_money_with_symbol Product.find_by(id: item.product_id).price %>
            </td>
              <td>
              <%= item[:quantity].to_i %>
            </td>
            <td>
              <%= humanized_money_with_symbol Product.find_by(id: item.product_id).price * item[:quantity].to_i %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
    </div>

  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
